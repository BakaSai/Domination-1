<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Widget.AppCompat.ListView.DropDown" parent="@*com.kiwibrowser.browser:style/Base.Widget.AppCompat.ListView">
      <item name="android:backgroundTint">@*android:color/secondary_text_leanback_light</item>
    </style>
    <style name="ButtonBar" parent="@*android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">?*android:dividerVertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">0.0dip</item>
    </style>
    <style name="ButtonBarButton" parent="@*android:style/Widget.Holo.Button">
        <item name="android:background">@*com.kiwibrowser.browser:drawable/abc_item_background_holo_dark</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ContextualSearchCaptionTextView">
        <item name="android:textAppearance">@*com.kiwibrowser.browser:style/BlackBody</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@*android:color/primary_text_leanback_light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">7.0dip</item>
        <item name="android:layout_marginRight">7.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="ContextualSearchContextTextView">
        <item name="android:textSize">@*com.kiwibrowser.browser:dimen/text_size_large</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">none</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">30.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:requiresFadingEdge">horizontal</item>
    </style>
    <style name="ContextualSearchTextViewLayout">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@*android:color/primary_text_leanback_light</item>
        <item name="android:paddingLeft">53.0dip</item>
        <item name="android:paddingRight">53.0dip</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Divider">
        <item name="android:background">@*android:color/transparent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@*com.kiwibrowser.browser:dimen/divider_height</item>
        <item name="android:importantForAccessibility">no</item>
    </style>
    <style name="FullscreenWhiteBase" parent="@*com.kiwibrowser.browser:style/Theme.AppCompat">
        <item name="android:windowBackground">@*android:color/secondary_text_leanback_light</item>
        <item name="android:textColorLink">@*android:color/white</item>
        <item name="*com.kiwibrowser.browser:colorAccent">@*android:color/white</item>
        <item name="*com.kiwibrowser.browser:colorPrimary">@*android:color/secondary_text_leanback_light</item>
        <item name="*com.kiwibrowser.browser:colorPrimaryDark">@*android:color/primary_text_leanback_light</item>
        <item name="*com.kiwibrowser.browser:windowNoTitle">true</item>
    </style>
    <style name="GvrDialogTheme" parent="@*android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
    </style>
    <style name="Platform.V11.AppCompat.Light" parent="@*android:style/Theme.Holo" />
    <style name="TabbedModeThemeBase" parent="@*com.kiwibrowser.browser:style/MainTheme">
        <item name="android:windowBackground">@*android:color/primary_text_leanback_light</item>
    </style>
    <style name="ThemeWithActionBarBase" parent="@*com.kiwibrowser.browser:style/Theme.AppCompat">
        <item name="android:windowBackground">@*android:color/primary_text_leanback_light</item>
        <item name="*com.kiwibrowser.browser:colorAccent">@*com.kiwibrowser.browser:color/pref_accent_color</item>
        <item name="*com.kiwibrowser.browser:colorPrimary">@*android:color/secondary_text_leanback_light</item>
        <item name="*com.kiwibrowser.browser:colorPrimaryDark">@*android:color/primary_text_leanback_light</item>
        <item name="android:windowShowWallpaper">false</item>
    </style>
    <style name="Widget.Design.BottomSheet.Modal" parent="@*android:style/Widget">
        <item name="android:background">@*android:color/secondary_text_leanback_light</item>
        <item name="*com.kiwibrowser.browser:behavior_hideable">true</item>
        <item name="*com.kiwibrowser.browser:behavior_peekHeight">auto</item>
        <item name="*com.kiwibrowser.browser:behavior_skipCollapsed">false</item>
    </style>
</resources>
