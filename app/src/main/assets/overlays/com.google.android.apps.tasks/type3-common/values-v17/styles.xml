<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CompletedTaskHeader">
        <item name="android:textSize">@*com.google.android.apps.tasks:dimen/default_font_size</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:layout_marginLeft">4.0dip</item>
        <item name="android:minHeight">@*com.google.android.apps.tasks:dimen/task_item_title_min_height</item>
        <item name="android:fontFamily">@*com.google.android.apps.tasks:font/google_sans_medium</item>
        <item name="android:layout_marginStart">4.0dip</item>
    </style>

    <style name="CustomSnackbar.Text" parent="@*com.google.android.apps.tasks:style/CustomSnackbar">
        <item name="android:textSize">@*com.google.android.apps.tasks:dimen/snackbar_text_font_size</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:paddingLeft">@*com.google.android.apps.tasks:dimen/snackbar_text_start_spacing</item>
        <item name="android:paddingTop">@*com.google.android.apps.tasks:dimen/snackbar_text_top_spacing</item>
        <item name="android:paddingRight">@*com.google.android.apps.tasks:dimen/snackbar_text_end_spacing</item>
        <item name="android:paddingBottom">@*com.google.android.apps.tasks:dimen/snackbar_text_bottom_spacing</item>
        <item name="android:paddingStart">@*com.google.android.apps.tasks:dimen/snackbar_text_start_spacing</item>
        <item name="android:paddingEnd">@*com.google.android.apps.tasks:dimen/snackbar_text_end_spacing</item>
    </style>

    <style name="OptionMenuTitle">
        <item name="android:textAppearance">@*com.google.android.apps.tasks:style/OptionMenuTitleTextAppearance</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:paddingLeft">@*com.google.android.apps.tasks:dimen/option_item_horiz_spacing</item>
        <item name="android:paddingTop">@*com.google.android.apps.tasks:dimen/option_item_vertical_spacing</item>
        <item name="android:paddingRight">@*com.google.android.apps.tasks:dimen/option_item_horiz_spacing</item>
        <item name="android:paddingBottom">@*com.google.android.apps.tasks:dimen/option_item_vertical_spacing</item>
        <item name="android:paddingStart">@*com.google.android.apps.tasks:dimen/option_item_horiz_spacing</item>
        <item name="android:paddingEnd">@*com.google.android.apps.tasks:dimen/option_item_horiz_spacing</item>
    </style>

</resources>
