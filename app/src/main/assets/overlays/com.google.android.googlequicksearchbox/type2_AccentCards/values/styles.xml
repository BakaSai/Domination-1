<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardActionButton">
        <item name="android:textSize">@*com.google.android.googlequicksearchbox:dimen/card_action_text</item>
        <item name="android:textColor">@*com.google.android.googlequicksearchbox:color/link_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center</item>
        <item name="android:background">@*com.google.android.googlequicksearchbox:drawable/card_action_button_background</item>
        <item name="android:paddingLeft">@*com.google.android.googlequicksearchbox:dimen/card_padding</item>
        <item name="android:paddingRight">@*com.google.android.googlequicksearchbox:dimen/card_padding</item>
        <item name="android:minHeight">@*com.google.android.googlequicksearchbox:dimen/card_action_button_height</item>
        <item name="android:maxLines">2</item>
        <item name="android:drawablePadding">4.0dip</item>
    </style>
    <style name="CardListTitle" parent="@*com.google.android.googlequicksearchbox:style/CardText">
        <item name="android:textSize">@*com.google.android.googlequicksearchbox:dimen/card_medium_text</item>
        <item name="android:textColor">@*com.google.android.googlequicksearchbox:color/card_title_text</item>
    </style>
    <style name="CardText">
        <item name="android:textSize">@*com.google.android.googlequicksearchbox:dimen/card_small_text</item>
        <item name="android:textColor">@*com.google.android.googlequicksearchbox:color/card_text</item>
        <item name="android:textColorLink">@*com.google.android.googlequicksearchbox:color/link_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="Theme.Velvet" parent="@*com.google.android.googlequicksearchbox:style/Theme.Gsa">
        <item name="android:windowBackground">@*com.google.android.googlequicksearchbox:color/activity_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowSoftInputMode">adjustPan|stateUnchanged</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@*com.google.android.googlequicksearchbox:color/status_bar_background</item>
        <item name="*com.google.android.googlequicksearchbox:qpCardElevation">@*com.google.android.googlequicksearchbox:dimen/card_elevation</item>
        <item name="android:backgroundTint">@*android:color/background_dark</item>
    </style>
    <style name="qp_card_module">
        <item name="android:minHeight">@*com.google.android.googlequicksearchbox:dimen/qp_min_module_height</item>
        <item name="android:backgroundTint">@*android:color/accent_material_dark</item>
    </style>
    <style name="back_of_card_light_theme">
        <item name="*com.google.android.googlequicksearchbox:backOfCardCloseFontColor">#ffffffff</item>
        <item name="*com.google.android.googlequicksearchbox:backOfCardHeaderBackgroundColor">@*android:color/background_floating_material_dark</item>
        <item name="*com.google.android.googlequicksearchbox:backOfCardLineColor">@*android:color/background_floating_material_dark</item>
        <item name="*com.google.android.googlequicksearchbox:cardActionIconTint">#ffffffff</item>
        <item name="*com.google.android.googlequicksearchbox:cardActionLabelColor">#ffffffff</item>
        <item name="android:backgroundTint">@*android:color/accent_material_dark</item>
    </style>

</resources>
